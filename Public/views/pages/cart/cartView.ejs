<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="../../../styles/styles.css" />
    <title>OS - Checkout</title>
  </head>

  <body>
    <nav>
      <div class="nav-bar">
        <h2 class="">
          Bienvenido, <%= user.email %>
          <form id="logout-form" action="/auth/logout" method="POST">
            <button class="btn btn-outline-danger" type="submit">Logout</button>
          </form>
          <a href="/">
            <button class="btn btn-outline-primary" type="submit">Home</button>
          </a>
        </h2>
      </div>
    </nav>

    <article>
      <div id="cart-div" class="ms-4" data-cartId="<%= user.cart %>">
        <% if (cart && cart.length>= 1) { %> <% cart.forEach(function(item) { %>
        <div class="card shadow" style="max-width: 500px">
          <div class="row g-0">
            <div class="col-md-4">
              <img
                src="<%= item.thumbnail %>"
                class="img-fluid rounded-start mt-4"
                alt="<%= item.thumbnail %>"
              />
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h5 class="card-title"><%= item.title %></h5>
                <p class="card-text"><%= item.description %></p>
                <p class="card-text">cantidad: <%= item.cant %></p>
                <p>Total: <%= item.cant * item.price %></p>
              </div>
            </div>
          </div>
          <button
            data-deleteProduct="<%= item._id %>"
            class="deleteProduct-btn btn btn-outline-secondary"
          >
            Delete product
          </button>
        </div>
        <% }); %>
        <button
          data-productsInCart="<%= cart %>"
          class="btn btn-outline-success mb-4 mt-2"
          id="checkout-btn"
        >
          Checkout
        </button>
        <% } %>
      </div>
    </article>

    <footer></footer>
  </body>

  <script
    src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
    integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3"
    crossorigin="anonymous"
  ></script>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"
    integrity="sha384-mQ93GR66B00ZXjt0YO5KlohRA5SY2XofN4zfuZxLkoj1gXtW8ANNCe9d5Y3eG5eD"
    crossorigin="anonymous"
  ></script>
  <script src="../views/pages/cart/cartView.js"></script>
</html>
